@model PEF.Models.Tag
@using PEF.Models
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}
<partial name="_validationMsg" />
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            <h1 class="m-0">Tags</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item active">Tags</li>
            </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
      
<section class="content">
<div class="container-fluid">
<div class="row">
    <div class="col-6 text-left" ><h1 class="form-title">Add New Tag</h1></div>  
    <div class="col-6 text-right mt-3 sm-link" ><a asp-action="Index" ><i class="bi bi-list-ul"></i> List All Tags</a></div>
</div>

<div class="row">
    <div class="col-12">
        <form action="~/Control/Tags/Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="ArName" class="control-label"></label>
                <input asp-for="ArName" class="form-control" />
                <span asp-validation-for="ArName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempId" class="control-label"></label>
                 <select asp-for="TempId" class="form-control" name="TempId">
                     <option value="" >:: SELECT TEMPLATE ::</option>
                @{
                    List<HtmlTemplate> templates = ViewBag.Templates;
                    foreach (HtmlTemplate temp in templates)
                    {                                                   
                        <option value="@temp.Id">@temp.Name</option>
                    }
                }
                </select>
                <span asp-validation-for="TempId" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <label asp-for="Thumb" class="control-label"></label>
                <input type="file" asp-for="Thumb" class="form-control" />
                <span asp-validation-for="Thumb" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="ItemsPerPage" class="control-label"></label>
                <input asp-for="ItemsPerPage" class="form-control" />
                <span asp-validation-for="ItemsPerPage" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
<div>
</div>
</div></section>
@section Scripts{
    {
        <partial name="_ValidationScriptsPartial" >
    }
}

