@model PEF.Models.Members
@using PEF.Models
@{
    ViewData["Title"] = "نسيت كلمة المرور";
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="container justify-content-center">
    <div class="row">
        <div class="col-12 text-center"><div class="text-center mb-3"><h2>تغيير كلمة المرور</h2></div></div>
        <div class="col-12 d-flex justify-content-center">
            <div style="max-width:700px;width:100%;">
                <div class="row d-flex justify-content-center mt-4">
                    <div class="col-12 col-sm-12 col-md-6">
                        <form asp-action="ChangePassword" asp-controller="Home" method="post">
                            
                            <input type="hidden" name="code" id="code" value="@ViewBag.Code" />
                            <input type="hidden" name="email" id="email" value="@ViewBag.Email" />
                            <div class="row mb-3">
                                <div class="col-12">
                                    <p class="text-center text-danger">
                                        @if (ViewBag.Msg != null)
                                            @ViewBag.msg

                                        </p>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="form-group col-12 col-md-12">
                                        <input type="password" name="password" id="password" data-val="true" data-val-required="كلمة المرور اجبارية" placeholder="كلمة المرور" class="form-control" required="required" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span>
                                    </div>
                                </div>

                                 <div class="row mb-3">
                                    <div class="form-group col-12 col-md-12">
                                        <input type="password" name="confirm_password" id="confirm_password" data-val="true" data-val-required="تأكيد المرور اجبارية" data-val-equalto="كلمة المرور وتأكيد كلمة المرور يجب ان يكونا متطابقين!" data-val-equalto-other="*.password" placeholder="تأكيد كلمة المرور" class="form-control" required="required" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="confirm_password" data-valmsg-replace="true"></span>
                                    </div>
                                </div>

                                <div class="form-group mb-1 text-center" style="padding:0px;">
                                    <input type="submit" value="تغيير كلمة المرور" class="btn subscribe_btn" style="width:100%;margin-right:0px;" />
                                </div>
                                <div class="form-group mb-3 text-center"><a asp-action="Login" asp-controller="Home" class="register">تسجيل الدخول ...</a></div>
                                <div class="form-group mb-3 text-center"><a asp-action="Signup" asp-controller="Home" class="register">لا يوجد لديك حساب! سجل الآن...</a></div>
                            </form>
                        </div>
                        <div class="col-12 col-sm-12 col-md-6 justify-content-center pt-5 pb-5">
                            <div style="border:solid 1px #ccc;border-radius:50%;padding:80px;height:250px;width:250px;background-color: #fbfbfb;margin-right:auto;margin-left:auto;"><i class="fa-solid fa-arrow-right-to-bracket" style="font-size:100px;"></i></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        {
            <partial name="_ValidationScriptsPartial">
            <partial name="_validationMsg" />
        }
    }
