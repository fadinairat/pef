                            <h2 class="card-title mb-4">إشترك في النشرة الإخبارية</h2>

                            <div class="row justify-content-center">
                                <div class="col-12 col-md-8">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="أدخل بريدك الإلكتروني" aria-label="Recipient's email" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn" type="button">إشترك</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }



    <div class="row">
		<div class="col-12 text-center mt-2 mb-5"><h4>عدد الزيارات: @(ViewBag.Visits != null ? ViewBag.Visits : "")</h4></div>
        <div class="col-12 col-md-3 text-center mb-4">
            <img src="~/res/images/footer-logo.png" class="footer-logo" alt="The Palestinian Employment Fund">
            <p>
				@{
					if (ViewBag.FooterDesc != null)
					{
						<span>@Html.Raw(ViewBag.FooterDesc.Summary)</span>
					}
				}
            </p>
        </div>

        <div class="col-12 col-md-6">
            <div class="row">
				@if (ViewBag.ParentMenus != null)
				{
					foreach (Menu item in ViewBag.ParentMenus)
					{
						string dropdown = "";
						//string menuLink = "<h5>" + item.Name + "</h5>";
						if (ViewBag.SubMenus != null)
						{
							foreach (Menu sub in ViewBag.SubMenus)
							{
								if (sub.ParentId == item.Id)
								{
									//if (dropdown == "") dropdown = "<ul class=\"dropdown-menu\" aria-labelledby=\"navbarDropdown\" >";
									//dropdown += "<li><a class=\"dropdown-item\" target=\""+sub.Target+"\" href=\""+sub.Link+"\">"+sub.Name+"</a></li>";
									dropdown += "<li class='mb-2'><a href=\"" + sub.Link + "\" target=\"" + sub.Target + "\" class=\"\" ><span>" + sub.Name + "</span></a></li>";

								}
							}
						}
						<div class="col-6 col-lg-6 mb-3">
							<h4 class="foot_title text-white">@Html.Raw(item.Name)</h4>
							<hr class="line1">
							<div class="">
								<ul class="foot-list">
								@Html.Raw(dropdown)
							</ul>
							</div>
						</div>
					}
				}
